<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/main_screen_bg_gradient"
        android:gravity="center"
        android:id="@+id/headerLL"
        android:layout_height="120dp">

        <ImageView
            app:srcCompat="@drawable/logo_symbol"
            android:id="@+id/headerLogo"
            android:paddingLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:text="BASIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headerText"
            android:paddingTop="5dp"
            android:shadowRadius="100"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/fake_drop_shadow"
        android:id="@+id/headerShadow"
        android:layout_height="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="501dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/scrollLL">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:id="@+id/introLayout"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:text="Introduction to \nMusic Theory"
                    android:layout_width="255dp"
                    android:layout_height="128dp"
                    android:id="@+id/introTxt"
                    android:layout_weight="0.8"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical" />

                <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/introbtn"
                    android:id="@+id/introBtn"
                    android:layout_weight="0.20"
                    android:background="@drawable/select_icon"
                    android:scaleType="fitXY"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:id="@+id/mnotesLayout"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:text="Musical Notes"
                    android:layout_width="255dp"
                    android:layout_height="128dp"
                    android:id="@+id/mnotesTxt"
                    android:layout_weight="0.8"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical" />

                <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/keyboardbtn"
                    android:id="@+id/mnotesBtn"
                    android:layout_weight="0.20"
                    android:background="@drawable/select_icon"
                    android:scaleType="fitXY"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:id="@+id/smpnotelenLayout"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp">

                <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/smpnotelenbtn"
                    android:id="@+id/smpnotelenBtn"
                    android:layout_weight="0.20"
                    android:background="@drawable/select_icon"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:text="Simple Note Lengths"
                    android:layout_width="255dp"
                    android:layout_height="128dp"
                    android:id="@+id/smpnotelenTxt"
                    android:layout_weight="0.8"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:id="@+id/advnotelenLayout"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp">

                <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/advnotelenbtn"
                    android:id="@+id/advnotelenBtn"
                    android:layout_weight="0.20"
                    android:background="@drawable/select_icon"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:text="Advanced Note Lengths"
                    android:layout_width="255dp"
                    android:layout_height="128dp"
                    android:id="@+id/advnotelenTxt"
                    android:layout_weight="0.8"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:id="@+id/bufferLL"
                android:layout_marginTop="50dp"></LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>