<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/fake_drop_shadow"
        android:id="@+id/headerShadow"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/headerLL"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/main_screen_bg_gradient"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/headerLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/logo_symbol" />

        <TextView
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:shadowRadius="100"
            android:text="ADVANCED"
            android:textAlignment="center"
            android:textColor="@color/colorTextPrimary"
            android:textSize="30sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="501dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/scrollLL">

            <LinearLayout
                android:id="@+id/harmoniesLayout"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/harmoniesTxt"
                    android:layout_width="255dp"
                    android:layout_height="128dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="Harmonies"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/harmoniesBtn"
                    android:layout_width="128dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.20"
                    android:background="@drawable/select_icon"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/introbtn" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:id="@+id/bufferLL"
                android:layout_marginTop="50dp"></LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>